model Offer {
  id Int @id @default(autoincrement())
  modality OfferModality @default(PRESENCIAL)
  shift OfferShifts? @default(MORNING)
  originalPrice Int?
  withDiscountPrice Int?
  addressId Int

  address Address @relation(fields: [addressId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

enum OfferModality {
  EAD
  PRESENCIAL
}

enum OfferShifts {
  MORNING
  AFTERNOON
  NIGHT
}
