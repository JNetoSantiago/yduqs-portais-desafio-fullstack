model Address {
  id           Int      @id @default(autoincrement())
  street       String
  number       String?
  complement   String?
  neighborhood String?
  cityId       Int
  stateId      Int
  zipCode      String

  city  City  @relation(fields: [cityId], references: [id])
  state State @relation(fields: [stateId], references: [id])

  offers Offer[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
